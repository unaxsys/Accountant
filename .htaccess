# Block direct access to sqlite db
<Files "db.sqlite">
  Require all denied
</Files>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Canonical: /statii -> /statii/
  RewriteRule ^statii$ /statii/ [R=301,L]

  # Allow the /statii/ folder and everything inside it (no rewrites)
  RewriteRule ^statii/ - [L]
</IfModule>